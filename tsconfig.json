{
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
